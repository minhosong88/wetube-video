extends ../base

block content
    div#videoContainer(data-id=video._id)
        video(src=video.fileUrl, crossorigin)
        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn 
                    i.fas.fa-play
                div.videoControls__time
                    span#currentTime 00:00
                    span  / 
                    span#totalTime 00:00
            input(type="range", step="0.1", value="0", min="0")#timeline
            div.videoControls__volume
                input(type="range", step="0.1", value=0.5, min="0", max="1")#volume
                span#mute 
                    i.fas.fa-volume-down
            div
                span#fullScreen
                    i.fas.fa-expand
    div.video__data
        p.video__title=video.description
        small.video__owner Uploaded by  
            a(href=`/users/${video.owner._id}`)=video.owner.name
        small.video__createdAt=new Date(video.createdAt).toLocaleDateString("en-en",{weekday: "long", year: "numeric", month: "long", day: "numeric"})
        br
    if String(loggedInUser._id) === String(video.owner._id)         
        a(href=`${video.id}/edit`) Edit Video &rarr;
        br
        a(href=`${video.id}/delete`) Delete Video &rarr;
    if loggedIn
        div.video__add-comments 
            form.video__comment-form#commentForm
                textarea(cols="30", rows="10", placeholder="Write a comment..")
                button Add Comment
    div.video__comments
        ul 
            each comment in video.comments.reverse()
                li.video__comment#comment
                    i.fa-regular.fa-comment
                    span   #{comment.text}
                    if String(loggedInUser._id) === String(comment.owner._id)
                        span#deleteBtn(data-id=comment._id) ‚ùå
                    else
                        span 

block scripts
    script(src="/static/js/videoPlayer.js")
    if loggedIn
        script(src="/static/js/commentSection.js")
