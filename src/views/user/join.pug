extends ../base

block content 
    if errorMessage
        span=errorMessage
    form(method="POST") 
        input(type="text", name="name", placeholder="Name", required minlength="2", maxlength="30", pattern="^[a-zA-Z\\s]{2,30}", title="Name must be 2-30 characters long and can only contain letters and spaces.")
        input(type="email", name="email", placeholder="Email", required, maxlength="50")
        input(type="text", name="username", placeholder="Username", required, minlength="5", maxlength="20", pattern="[a-zA-Z0-9_\\-]{5,20}$", title="Username must be 5-20 characters long and can only contain letters, numbers, hyphens, and underscores.")
        input(placeholder="Password", name="password", type="password", required, pattern="(?=.*[A-Z])(?=.*\\W).{10,20}", title="Password must contain at least one uppercase, one special character, and be between 10 and 20 characters long")
        input(placeholder="Confirm Password", name="password2", type="password", required, pattern="(?=.*[A-Z])(?=.*\\W).{10,20}", title="Password must contain at least one uppercase, one special character, and be between 10 and 20 characters long")
        input(placeholder="Location", name="location", type="text", required, minlength="2", maxlength="50", pattern="^[a-zA-Z0-9\\s,]{2,50}$" title="location must be 2-50 characters long and can only contain letters and spaces.")
        input(type="submit", value="Join")  
        include ../partials/social-login 
    div.auth__switch
        span Already have an account?
        a(href="/login") Log in now &rarr;