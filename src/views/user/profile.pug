extends ../base
include ../mixins/video 

block content
    div.profile__data
        //working code: img(src=`/${user.avatarUrl}`, crossorigin).avatar
        img(src=user.avatarUrl, crossorigin).avatar
        h3=user.name
    div.video-grid
        each video in user.videos 
            +video(video)
        else
            span.empty__message No videos found