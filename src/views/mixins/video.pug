mixin video(video)
    a(href=`/videos/${video.id}`).video-mixin 
        div.video-mixin__thumb(crossorigin, style=`background-image:url(${"/" + video.thumbUrl});background-size:cover;background-position:center`)
        div.video-mixin__data
            span.video-mixin__title=video.title 
            div.video-mixin__meta
                span #{video.owner.name} â€¢ 
                if video.meta.view < 2
                    span #{video.meta.view} view
                else
                    span #{video.meta.view} views
